@model MovieViewModel
@{
    ViewData["Title"] = "Create New Movie";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2> <i class="bi bi-film"></i>  Create Movie</h2>
<hr />
<form method="POST" id="inputform" enctype="multipart/form-data">

    <div class="form-group">
        <label class="text-muted" asp-for="Title"></label>
        <input class="form-control" type="text" asp-for="Title" required maxlength="250" />
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label class="text-muted" asp-for="Year"></label>
        <input class="form-control" type="number" asp-for="Year" required />
        <span asp-validation-for="Year" class="text-danger"></span>
    </div>
    <div class="form-group">

        <label class="text-muted" asp-for="Rate"></label>
        <input class="form-control" type="number" asp-for="Rate" />
        <span asp-validation-for="Rate" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label class="text-muted" asp-for="StoryLine"></label>
        <textarea class="form-control" asp-for="StoryLine" form="inputform" maxlength="2500">Enter text here...</textarea>
        <span asp-validation-for="StoryLine" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label class="text-muted" asp-for="GenreId"></label>
        <select class="form-control" asp-for="GenreId" asp-items="@(new SelectList(Model.genres,"id","Name"))">
            <option></option>
        </select>
        <span asp-validation-for="GenreId" class="text-danger"></span>
    </div>

    <div class="custom-file">

        <input class="custom-file-input" type="file" name="img" accept="image/*" />
        <label class="custom-file-label" asp-for="Poster"></label>

    </div>
    <hr />
    <button type="submit" class=" btn btn-primary" mt-4>
        <i class="bi bi-check"></i>
        Save
    </button>
    <a asp-action="index" class=" btn btn-secondary">
        <i class="bi bi-x"></i>
        Cancel
    </a>

</form>

